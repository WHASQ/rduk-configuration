{
  "name": "@rduk/configuration",
  "version": "2.2.0",
  "description": "Manage configuration in your Node.js app",
  "main": "lib/index.js",
  "scripts": {
    "pretest": "mkdir config && cp ./spec/resources/*yml . && cp ./spec/resources/config/*yml ./config",
    "test": "istanbul cover node_modules/jasmine/bin/jasmine.js --report cobertura",
    "posttest": "rm ./config*yml && rm -rf ./config && istanbul report && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rd-uk/rduk-configuration.git"
  },
  "keywords": [
    "rduk",
    "configuration",
    "manager"
  ],
  "author": "RDUK <tech@rduk.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rd-uk/rduk-configuration/issues"
  },
  "homepage": "https://github.com/rd-uk/rduk-configurationr#readme",
  "devDependencies": {
    "coveralls": "3.0.0",
    "istanbul": "0.4.5",
    "jasmine": "2.8.0"
  },
  "dependencies": {
    "@rduk/errors": "1.3.0",
    "extend": "3.0.1",
    "js-yaml": "3.10.0",
    "lodash": "4.17.4"
  }
}
